@model IEnumerable<Project_Builder_Development.Models.IdeaBaseViewModel>

<h2>[Projects Working on] / [Projects Worked On] </h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.IdeaId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Owner)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Title)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.InvestmentGoal)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PartnersRequired)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.VolunteersRequired)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.IdeaId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Owner)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.InvestmentGoal)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PartnersRequired)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.VolunteersRequired)
            </td>
            <td>
                @Html.ActionLink("Details", "IdeaDetails", new { id = item.IdeaId})
            </td>
        </tr>
    }

</table>
