@model Project_Builder_Development.Models.RequestBaseViewModel

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    <h3>Request from @Model.UserName for @Model.Ideas.Title</h3>

    @if(ViewBag.ErrorMessage == "You have already sent a request to this Idea before!")
    {
        <h4 style="color:red">@ViewBag.ErrorMessage</h4>
    }
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.Hidden("RequestId", Model.RequestId)
    @Html.Hidden("UserName", Model.UserName)
    @Html.Hidden("IdeaId", Model.IdeaId)

    <div class="form-group">
        @Html.LabelFor(model => model.Message, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.Message, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Message, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Patner, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            <input type="radio" name="Patner" value="true" />
            Yes
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Volunteer, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            <input type="radio" name="Volunteer" value="true" />
            Yes
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Investor, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            <input type="radio" name="Investor" value="true" />
            Yes
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Create" class="btn btn-default" />
        </div>
    </div>
</div>
}
